{
  "name": "Demo2",
  "version": "1.0.0",
  "description": "A simple CAP project.",
  "repository": "<Add your repository here>",
  "license": "UNLICENSED",
  "private": true,
  "dependencies": {
    "@sap/cds": "^5",
    "express": "^4",
    "hdb": "^0.18.3",
    "passport": "^0.5.3",
    "@sap/xsenv": "^3.2.2",
    "@sap/xssec": "^3.2.13"
  },
  "devDependencies": {
    "@sap/ux-specification": "^1.102.1",
    "sqlite3": "^5.0.2"
  },
  "scripts": {
    "start": "NODE_ENV=production cds run",
    "watch-inventory-recon": "cds watch --open inventory-recon/webapp/index.html?sap-ui-xx-viewCache=false"
  },
  "eslintConfig": {
    "extends": "eslint:recommended",
    "env": {
      "es2020": true,
      "node": true,
      "jest": true,
      "mocha": true
    },
    "globals": {
      "SELECT": true,
      "INSERT": true,
      "UPDATE": true,
      "DELETE": true,
      "CREATE": true,
      "DROP": true,
      "CDL": true,
      "CQL": true,
      "CXL": true,
      "cds": true
    },
    "rules": {
      "no-console": "off",
      "require-atomic-updates": "off"
    }
  },
  "cds": {
    "requires": {
      "db": {
        "kind": "sqlite",
        "credentials": {
          "database": "inventoryrecon.db"
        }
      },
      "[production]": {
        "db": {
          "kind": "hana-cloud"
        },
        "uaa": {
          "kind": "xsuaa"
        }
      }
    }
  },
  "sapux": [
    "app/inventory-recon"
  ],
  "engines": {
    "node": ">=12.18"
  }
}